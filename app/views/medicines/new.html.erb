<h1>上传商品</h1>

<div class="row">

<div class="col-md-6 col-md-offset-3">
<%= form_for(@medicine, html: { multipart: true }) do |f| %>
<%= render 'shared/error_messages2' %>

<%= f.label :name,"商品名" %>
<%= f.text_field :name ,class: 'form-control'%>

<%= f.label :kind, "种类"%>
 <%= f.select :kind,  ["基本药物","中药饮品","处方药","保健品","医疗器械","汤料","凉茶","家庭药箱","其他"],class: "selectpicker" %>


<%= f.label :describe ,"描述"%>
<%= f.text_area :describe, class: 'form-control',id:"text1",placeholder:"输入商品的描述" %>

<%= f.label :price," 价格 (RMB¥)" %>
<%= f.number_field :price ,class: 'form-control',placeholder:"请输入整数"%>

<%= f.submit "上传", class: "btn btn-primary" %>
<span class="picture">
<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
</span>
<% end %>

</div>



</div>


<script type="text/javascript">
$('#medicine_picture').bind('change', function() {
size_in_megabytes = this.files[0].size/1024/1024;
if (size_in_megabytes > 5) {
alert('Maximum file size is 5MB. Please choose a smaller file.');
}
});
</script>