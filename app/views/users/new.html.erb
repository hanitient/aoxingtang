<% provide(:title, '注册') %>

<h1>注册</h1>

<div class="row">

<div class="col-md-6 col-md-offset-3">

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>

<%= f.label :name,"用户名" %>
<%= f.text_field :name ,class: 'form-control'%>

<%= f.label :phone, "手机"%>
<%= f.text_field :phone , class: 'form-control',placeholder:"用于验证和取回密码的邮箱"%>

<%= f.label :address, "地址"%>
<%= f.text_field :address, class: 'form-control',placeholder:"请填写正确的地址以便于快递收货"%>

<%= f.label :password ,"密码"%>
<%= f.password_field :password, class: 'form-control' ,placeholder:"密码长度至少6位"%>


<%= f.submit "确认注册", class: "btn btn-default" ,id:"regbutton2"%>
<% end %>

</div>

</div>